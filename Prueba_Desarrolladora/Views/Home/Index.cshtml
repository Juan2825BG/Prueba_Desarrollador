@model IEnumerable<Prueba_Desarrollador.Models.Db.Libro>

@{
    ViewData["Title"] = "Home Page";
}

<div class="main-content-glass">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-8">
                <h2 class="mb-4 fw-bold text-dark">Libros registrados</h2>

                <div class="table-rounded-wrapper">
                    <table class="table-no-lines">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Autor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="row-hover-animate">
                                    <td class="fw-medium">@item.Titulo</td>
                                    <td>
                                        <span class="text-muted">@item.Autor.Nombre</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-4 d-flex flex-column align-items-center justify-content-start pt-5">

                <a asp-controller="Libros" asp-action="Index" class="btn-mega-card btn-books-multi mb-5">
                    <div class="slideshow-overlay"></div>
                    <span class="btn-label">Libros</span>
                </a>

                <a asp-controller="Autores" asp-action="Index" class="btn-mega-card btn-authors-multi">
                    <div class="slideshow-overlay"></div>
                    <span class="btn-label">Autores</span>
                </a>
            </div>
        </div>
    </div>
</div>