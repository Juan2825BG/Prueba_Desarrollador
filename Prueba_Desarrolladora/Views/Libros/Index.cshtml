@model IEnumerable<Prueba_Desarrollador.Models.Db.Libro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark m-0">Libros</h2>
                <a asp-action="Create" class="btn-add-circle" title="Agregar nuevo libro">
                    <i class="bi bi-plus-lg"></i>
                </a>
            </div>

            <div class="table-rounded-wrapper">
                <table class="table-no-lines">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                            <th>@Html.DisplayNameFor(model => model.Autor)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="row-hover-animate">
                                <td class="fw-medium">
                                    @Html.DisplayFor(modelItem => item.Titulo)
                                </td>
                                <td>
                                    <span class="text-muted">@item.Autor.Nombre</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn edit-btn" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn delete-btn" title="Eliminar">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row mt-5">
                <div class="col-12 d-flex justify-content-center">
                    <a asp-controller="Home" asp-action="Index" class="btn-return-custom">
                        <i class="bi bi-arrow-left-circle-fill"></i>
                        <span>Regresar al Inicio</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
    </tbody>
</table>
